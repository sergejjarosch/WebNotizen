@model List<Notiz>

@if (Model != null && Model.Count() > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Title</th>
                <th>Time</th>
                <th></th>
                <th></th>

            </tr>
        </thead>
        <tbody>
            @foreach (var notiz in Model)
            {
                <tr>
                    <td>@notiz.Category?.Name</td>
                    <td>@notiz.Title</td>
                    <td>@notiz.TimeStamp</td>

                    <td><a asp-controller="notizen" asp-action="edit" asp-route-id="@notiz.NotizId" class="btn btn-link">Edit</a></td>
                    <td><a asp-controller="notizen" asp-action="delete" asp-route-id="@notiz.NotizId" class="btn btn-link" onclick="return confirmDelete()">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <a asp-controller="notizen" asp-action="add" class="btn btn-primary">Add Product</a>
}

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm("Are you sure you want to delete this product?");
        }
    </script>
}